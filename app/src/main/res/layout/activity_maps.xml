    <TextView
        android:id="@+id/tV_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speed:"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tV_steeringDirection"
        app:layout_constraintTop_toBottomOf="@+id/tV_CompassRequired"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tV_steeringDirection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Steering Direction:"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvDistance"
        app:layout_constraintTop_toBottomOf="@+id/tV_speed"
        tools:layout_editor_absoluteX="-1dp" />

    <TextView
        android:id="@+id/tV_CompassRequired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compass Required"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tV_speed"
        app:layout_constraintTop_toBottomOf="@+id/tV_CompassCurrent"
        tools:layout_editor_absoluteX="-1dp" />

    <TextView
        android:id="@+id/tV_cLat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Lat"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tV_cLng"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tV_cLng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Lng"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tV_dLat"
        app:layout_constraintTop_toBottomOf="@+id/tV_cLat"
        app:layout_constraintVertical_bias="0.326"
        tools:layout_editor_absoluteX="0dp" />

